# Where the React app is served
BASE_URL=http://localhost:3000
# Selenium browser
BROWSER=chrome
HEADLESS=true
# Selenium Grid (optional)
# SELENIUM_GRID_URL=http://localhost:4444/wd/hub
# Logging level
LOG_LEVEL=info

# Test credentials (set in your real .env; do NOT commit)
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
TEST_USER_SECRET=

# Enable destructive tests that modify data
ALLOW_PROFILE_UPDATE=false
ALLOW_REGISTRATION=false
ALLOW_PASSWORD_RESET=false
ALLOW_POST_MUTATIONS=true
