{
  "name": "personal-media",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.24.0",
    "msw": "^0.39.2",
    "react": "^17.0.1",
    "react-bootstrap": "^2.0.3",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-loader-spinner": "^4.0.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^5.0.1",
    "react-toast-notifications": "^2.5.1",
    "react-toastify": "^9.1.3",
    "web-vitals": "^1.1.0"
  },
  
  "engines": {
    "node": "20.11.1",
    "npm": "10.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --maxWorkers=1",
    "test:unit": "react-scripts test --runInBand",
    "test:unit:ci": "react-scripts test --watchAll false --ci --runInBand",
    "test:e2e": "playwright test --project=chromium-desktop",
    "test:e2e:smoke": "playwright test --project=chromium-desktop --grep @smoke",
    "test:e2e:mocked": "cross-env UI_E2E_USE_MOCKS=true UI_E2E_STUB_LOGIN=true playwright test --project=chromium-desktop",
    "test:e2e:mocked:smoke": "cross-env UI_E2E_USE_MOCKS=true UI_E2E_STUB_LOGIN=true playwright test --project=chromium-desktop --grep @smoke",
    "test:e2e:mocked:all": "cross-env UI_E2E_USE_MOCKS=true UI_E2E_STUB_LOGIN=true playwright test",
    "test:e2e:real": "cross-env UI_E2E_USE_MOCKS=false UI_E2E_STUB_LOGIN=false playwright test --project=chromium-desktop",
    "test:e2e:real:smoke": "cross-env UI_E2E_USE_MOCKS=false UI_E2E_STUB_LOGIN=false playwright test --project=chromium-desktop --grep @smoke",
    "test:e2e:hybrid": "cross-env UI_E2E_USE_MOCKS=false UI_E2E_STUB_LOGIN=true playwright test --project=chromium-desktop",
    "test:e2e:hybrid:smoke": "cross-env UI_E2E_USE_MOCKS=false UI_E2E_STUB_LOGIN=true playwright test --project=chromium-desktop --grep @smoke",
    "test:e2e:debug": "playwright test --project=chromium-desktop --debug",
    "test:e2e:trace": "playwright show-trace",
    "test:e2e:report": "playwright show-report reports/ui-e2e/html",
    "test:e2e:codegen": "playwright codegen",
    "test:e2e:install": "playwright install --with-deps",
    "prepare": "husky",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.56.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "husky": "^9.1.7",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  }
}
